<!DOCTYPE html>
<html>
<head>
	<title>Deepansh's Store</title>
	<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css">
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<style type="text/css">
		form{
			padding: 10px;
			padding-top: 50px;
		}
		body{
			color: white;
			background-color: #4682b4;
		}
		small{
			color: white;
			text-decoration: underline;
		}
		.blank{
			display: none;
		}
	</style>
</head>
<body>



	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
	  <a class="navbar-brand" href="#">DEEPANSH'S STORE</a>
	  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
	    <span class="navbar-toggler-icon"></span>
	  </button>
	  <div class="collapse navbar-collapse" id="navbarNav">
	    <ul class="navbar-nav">
	      <li class="nav-item active active">
	        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
	      </li>
	      <li class="nav-item active">
	        <a class="nav-link" href="/buy/filter">Buy</a>
	      </li>
	      <li class="nav-item active">
	        <a class="nav-link" href="/sell">Sell</a>
	      </li>
	      <li class="nav-item active">
	        <a class="nav-link" href="/contact">Contact us</a>
	      </li>
	    </ul>
	    <ul class="navbar-nav ml-auto">
	    	<% if(!currentUser){ %>
	    		<!-- <li class="nav-item active">
	      			<a class="nav-link" href="/register">Register</a>
	    		</li> -->
	    		<li class="nav-item active">
	      			<a class="nav-link" href="/login">Login</a>
	    		</li>
    		<% }else{%>
	    		<li class="nav-item active">
	      			<a class="nav-link" href="/logout">Logout</a>
	    		</li>
	    		<li class="nav-item active">
	      			<a class="nav-link" href="/newProduct">New product</a>
	    		</li>
    		<% }%>
    	</ul>
	  </div>
	</nav>
	<div class="container">
			<form action="/editCategory" method="POST">
			  <legend>Edit Category</legend>
			  <div class="form-group">
			  	<label for="category" >Category</label>
			    <select name="category" class="form-control" id="categorySelected">
			    		<option >Pick a category!</option>
			    		<% for(var i=0;i<categories.length;i++){ %>
			    		<option value="<%=categories[i].'_id'%>"><%=categories[i].name %></option>
			    		<% }%>
			    </select>
			  </div>
			  <div class="form-group">
			  	<label for="newcategory" >New Cagtegory</label>
			  	<input type="text" class="form-control" id="newcategory" aria-describedby="emailHelp" placeholder="NewCategory" name="newcategory">
			  </div>
			  <div class="form-group">
			  	<button type="submit" class="btn btn-primary">Submit</button>
			  </div>
			</form>
			<form action="/editSubCategory" method="POST">
			  <legend>Edit Subcategory</legend>
			  <div class="form-group">
			  	<label for="subcategory">Sub-category</label>
			    
			    	<select name="subcategory" class="form-control" id="fattu" >
			    		<option >Pick a subcategory!</option>
			    		<% for(var i=0;i<categories.length;i++){ %>
			    		<% for(var j=0;j<categories[i].subcategories.length;j++){%>
			    
			    		<option value="<%=categories[i].subcategories[j].'_id'%>">
			    			<%=categories[i].subcategories[j].name%>
			    		</option>
			    	</select>
			  </div>
			  <div class="form-group">
			  	<label for="newcategory" >New Subcagtegory</label>
			  	<input type="text" class="form-control" id="newcategory" aria-describedby="emailHelp" placeholder="New Subcategory" name="newcategory">
			  </div>
			  <div class="form-group">
			  	<button type="submit" class="btn btn-primary">Submit</button>
			  </div>
			</form>
	</div>
</body>
</html>
